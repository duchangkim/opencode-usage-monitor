{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": {
					"options": {
						"maxAllowedComplexity": 20
					}
				}
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useConst": "error",
				"useImportType": "error"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noConsoleLog": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	},
	"files": {
		"ignore": ["node_modules", "dist", "*.lock", "bun.lock", "test-results"]
	},
	"overrides": [
		{
			"include": ["test/**"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsoleLog": "off"
					},
					"style": {
						"useTemplate": "off"
					}
				}
			}
		}
	]
}
